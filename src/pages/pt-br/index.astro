---
import BaseLayoutPt from "../../layouts/BaseLayout-pt.astro";

import Landing from "../../components/landing/Landing-pt.astro";
---

<BaseLayoutPt>
  <Landing />
</BaseLayoutPt>

<script>
  const userPreferred = (navigator.languages && navigator.languages[0]) || navigator.language || "";

  const languageSelectorTouched = localStorage.getItem("languageSelectorTouched");
  if (!languageSelectorTouched) {
    if (/^en(-[A-Za-z]{2})?$/.test(userPreferred)) {
      window.location.href = "/";
    }
  }
</script>
