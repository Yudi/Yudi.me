---
import BaseLayoutEn from "../layouts/BaseLayout-en.astro";

import Landing from "../components/landing/Landing.astro";
---

<BaseLayoutEn>
  <Landing />
</BaseLayoutEn>

<script>
  const userLocales = navigator.languages;

  const languageSelectorTouched = localStorage.getItem("languageSelectorTouched");
  if (!languageSelectorTouched) {
    if (userLocales?.some((locale) => /^pt(-[A-Za-z]{2})?$/.test(locale))) {
      window.location.href = "/pt-br";
    }
  }
</script>
