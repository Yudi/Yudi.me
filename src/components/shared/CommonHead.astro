---
import Analytics from "./Analytics.astro";
const { title, description, lang } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import interWoff2 from "@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url";

interface Props {
  title?: string | undefined;
  description?: string | undefined;
  lang: string | undefined;
}

let defaultDescription: string = "";

if (!description) {
  if (lang === "pt-br") {
    defaultDescription =
      "Oi, sou Renan Yudi e este é meu site pessoal! Aqui você encontra meus projetos, artigos e outras coisas que eu gosto.";
  } else {
    defaultDescription =
      "Hi, I'm Renan Yudi and this is my personal website! Here you can find my projects, articles and other things I like.";
  }
}
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.png" />
  <meta name="viewport" content="width=device-width" />

  {(<title>{title ? `${title} | Yudi` : "Yudi"}</title>)}
  <meta name="description" content={description || defaultDescription} />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="canonical" href={canonicalURL} />

  <meta property="og:title" content="Yudi" />
  <meta property="og:url" content="https://yudi.com.br/" />
  <meta property="og:image" content="https://yudi.com.br/favicon.png" />
  <meta property="og:type" content="website" />

  <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin="anonymous" />
  <Analytics />
</head>
